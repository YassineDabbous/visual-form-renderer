{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true, // Vite handles transpilation, this is for type-checking. `vite-plugin-dts` overrides this for declaration generation.
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Library-specific settings */
    "declaration": true,           // Generates corresponding '.d.ts' file.
    "declarationMap": true,        // Generates a source map for each '.d.ts' file.
    "emitDeclarationOnly": true,   // Only emit '.d.ts' files; Vite handles the JS.
    "outDir": "dist",              // Specifies the output directory for types.,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": ["src"], // IMPORTANT: Only include the 'src' directory for the library build.
  "references": [{ "path": "./tsconfig.node.json" }],
}